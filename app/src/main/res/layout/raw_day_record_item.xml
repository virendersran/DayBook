<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:elevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                android:textStyle="bold"
                android:id="@+id/textView_adapter_daybook_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:drawableLeft="@drawable/manager"
                android:drawablePadding="7dp"
                android:textColor="@color/colorPrimaryDark"
                android:text="Virender"/>
            <TextView
                android:layout_below="@id/textView_adapter_daybook_Name"
                android:id="@+id/textView_adapter_display_department"
                android:drawableLeft="@drawable/department_daybook"
                android:drawablePadding="7dp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/colorPrimaryDark"
                android:text="Marketing"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="7"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                android:textStyle="bold"
                android:drawableLeft="@drawable/payment_type"
                android:id="@+id/paymentType"
                android:drawablePadding="7dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loan"/>
            <TextView
                android:id="@+id/textView_amount"
                android:drawablePadding="7dp"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/amount"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3000.000"/>
            <TextView
                android:id="@+id/textView_frequency"
                android:drawablePadding="7dp"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/frequency"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Monthly"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>